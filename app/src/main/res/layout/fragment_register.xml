<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/alert_round"
    android:layout_height="wrap_content"
    android:minHeight="600dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp"
    android:minWidth="400dp"
    tools:context=".LoginFragment">
<eightbitlab.com.blurview.BlurView android:id="@+id/blurView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:blurOverlayColor="#CC404A62"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="600dp"
    android:minWidth="400dp"
    tools:context=".LoginFragment">

    <LinearLayout
        android:id="@+id/second"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:layout_height="wrap_content"
        >
        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/edit_text_round"
            android:inputType="textEmailAddress"
            android:hint="Email address"
            android:textColorHint="#99000000"
            android:layout_marginBottom="28dp"
            />
        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/edit_text_round"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#99000000"
            />

        <EditText
            android:id="@+id/contact"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/edit_text_round"
            android:inputType="phone"
            android:hint="Contact Numer"
            android:layout_marginTop="28dp"
            android:textColorHint="#99000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_text_round"
            android:inputType="textAutoComplete"
            android:hint="Address"
            android:textColorHint="#99000000"
            />

        <TextView
            android:text="OR"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/map"
            android:layout_gravity="center"
            android:src="@drawable/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            />
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:background="@drawable/alert_round_transparent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="Are you a...."
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

        <Button
            android:id="@+id/farmer"
            android:background="@drawable/btn_round"
            android:textColor="#000000"
            android:text="Farmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="OR"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/buyer"
            android:background="@drawable/btn_round"
            android:textColor="#000000"
            android:text="Buyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="69dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            />
        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:background="@drawable/alert_round_transparent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnFragmentClose"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_cross_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</eightbitlab.com.blurview.BlurView>
</androidx.constraintlayout.widget.ConstraintLayout>